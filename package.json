{
  "name": "ory-editor-slate-katex",
  "version": "0.1.0",
  "main": "./lib/index.js",
  "scripts": {
    "build:lib": "babel ./src --ignore test.js --out-dir ./lib",
    "build:lib:watch": "npm run build:lib -- --watch",
    "build:css": "postcss -u postcss-import -u postcss-cssnext -c ../../../../config/postcss/config.js --dir lib/ src/index.css",
    "build:css:watch": "npm run watch:js -- -c \"npm run build:css\"",
    "clean": "rimraf \"dist/*\" \"lib/*\"",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "flow": "flow check --show-all-errors",
    "flow:watch": "npm run watch:js -- -c \"flow check --show-all-errors\"",
    "lint": "eslint \"+(src)/**/*.js\" --fix",
    "lint:watch": "npm run watch:js -- -c \"npm run lint\"",
    "prebuild": "npm run clean",
    "start": "npm-run-all --parallel build:lib:watch build:css:watch",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "watch:js": "chokidar \"+(src)/**/*.js\" --initial"
  },
  "engines": {
    "node": ">=6.0.0",
    "npm": "~3.8.0"
  },
  "author": "ORY GmbH",
  "license": "AGPL-3.0",
  "peerDependencies": {
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "selection-position": "^1.0.0",

  },
  "dependencies": {
    "katex": "^0.8.3",
    "react-katex": "^1.2.0",
    "react-portal": "^3.1.0",
    "react-tap-event-plugin": "^2.0.1",
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "postcss-cli": "^2.6.0",
    "postcss-cssnext": "^2.9.0",
    "babel-eslint": "^7.1.1",
    "babel-plugin-transform-class-properties": "^6.19.0",
    "babel-plugin-transform-inline-environment-variables": "^6.8.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-2": "^6.18.0",
    "coveralls": "^2.11.15",
    "cross-env": "^3.1.4",
    "enzyme": "^2.7.0",
    "eslint": "^3.11.1",
    "eslint-config-ory-am": "^3.0.0",
    "eslint-config-ory-am-react": "^3.0.0",
    "eslint-plugin-flowtype": "^2.29.1",
    "eslint-plugin-react": "^6.8.0",
    "flow-bin": "^0.37.4",
    "jest": "^18.1.0",
    "react": "^15.4.2",
    "react-addons-test-utils": "^15.4.2",
    "react-dom": "^15.4.2",
    "rimraf": "^2.5.4"
  }
}
